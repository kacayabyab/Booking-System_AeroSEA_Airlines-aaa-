        <script>
        const input = document.getElementById("myInput");
        const dropdown = document.getElementById("myDropdown");
        const options = dropdown.querySelectorAll("div");
        const clearBtn = document.getElementById("clearBtn");
        const container = document.querySelector(".dropdown");

        // Show dropdown when mouse enters
        container.addEventListener("mouseenter", () => {
            dropdown.style.display = "block";
        });

        // Hide dropdown when mouse leaves
        container.addEventListener("mouseleave", () => {
            dropdown.style.display = "none";
        });

        // Filter options while typing
        input.addEventListener("input", () => {
            dropdown.style.display = "block"; // keep open while typing
            const filter = input.value.toUpperCase();
             options.forEach(opt => {
                const txtValue = opt.textContent;
                opt.style.display = txtValue.toUpperCase().indexOf(filter) > -1 ? "" : "none";
            });
        });

        // Click option → populate input & close dropdown
        options.forEach(opt => {
            opt.addEventListener("click", function() {
                input.value = this.textContent;
                dropdown.style.display = "none"; // close after selecting
            });
        });

        // Click × → clear input & reset options
        clearBtn.addEventListener("click", function() {
            input.value = "";
            options.forEach(opt => opt.style.display = "");
            input.focus();
        });

        </script>
    
